        <activity android:name="com.nevergiveup.LoginActivity" />
        <activity android:name="com.nevergiveup.HubActivity" />
        <activity android:name="com.nevergiveup.MainActivity" />
        <activity android:name="com.nevergiveup.CenterActivity" />
        <activity android:name="com.nevergiveup.AboutUsActivity" />
        <activity android:name="com.nevergiveup.ChangePasswordActivity" />
